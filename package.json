{
  "name": "chat-view",
  "displayName": "chat-view",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chat-view.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-chat-view-container",
          "title": "ChatView",
          "icon": "images/logo.png"
        }
      ]
    },
    "views": {
      "vscode-chat-view-container": [
        {
          "type": "webview",
          "id": "chat-view.view",
          "name": "Conversation window"
        }
      ]
    },
    "configuration": {
      "title": "ChatView",
      "properties": {
        "chat-view.apiKey": {
          "type": "string",
          "default": null,
          "markdownDescription": "OpenAI API key. [Get your API Key from OpenAI](https://platform.openai.com/api-keys). \n\n**Please enable OpenAI API Key method to use this setting.**",
          "order": 1
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "openai": "^4.67.3"
  }
}
